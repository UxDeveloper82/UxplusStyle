@model UxDesignPlusStyle.Models.MyBlog
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>New Post</h2>
    @using (Html.BeginForm("Save", "MyBlogs"))
    {
        <div class="form-group">
            @Html.LabelFor(b => b.Title)
            @Html.TextBoxFor(b => b.Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.Author)
            @Html.TextBoxFor(b => b.Author, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.imageUrl)
            @Html.TextBoxFor(b => b.imageUrl, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.DatePost)
            @Html.TextBoxFor(b => b.DatePost, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.Description)
            @Html.TextBoxFor(b => b.Description, new { @class = "form-control" })
        </div>

        @Html.HiddenFor(b=>b.Id)
        <button type="submit" class="btn btn-primary">Save</button>

    }
</div>


